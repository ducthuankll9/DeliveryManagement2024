@model IEnumerable<DeliveryManagement.Models.Vehicle>

@{
    ViewBag.Title = "DS Xe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLightLayout.cshtml";
}

<h2>Danh sách phương tiện trong hệ thống</h2>

<p>
    <a href="@Url.Action("Create","Vehicles")">
        <i class="fa fa-plus-circle"></i> Thêm phương tiện mới
    </a>
</p>
<table class="table text-start align-middle table-bordered table-hover mb-0">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VehicleNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td style="color:blue;">
            @Html.ActionLink("Cập nhật giá", "Edit", new { id=item.VehicleNumber.Trim() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.VehicleNumber.Trim() })
        </td>
    </tr>
}

</table>
